{
  "name": "saigon-ui-core",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "copy-lib": "npx tsx ./tool/build.ts",
    "build:lib": "npx tsx ./tool/list_lib_files.ts && tsc -b ./tsconfig.lib.json && vite build && npm run copy-lib",
    "build:docs": "tsc && BUILT_ENV=docs vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run --config=./vitest.config.ts",
    "test:playwright": "npx playwright test",
    "test:watch": "vitest watch --config=./vitest.config.ts",
    "test:ui": "vitest run --ui --config=./vitest.config.ts"
  },
  "dependencies": {
    "@emotion/css": "^11.13.4",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@floating-ui/react": "^0.26.24",
    "classnames": "^2.5.1",
    "csstype": "^3.1.3",
    "html-react-parser": "^5.1.18",
    "marked": "^14.1.3",
    "marked-custom-heading-id": "^2.0.10",
    "marked-directive": "^1.0.7",
    "moment": "^2.30.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-live": "^4.1.7",
    "react-router-dom": "^6.27.0",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@napi-rs/magic-string": "^0.3.4",
    "@playwright/test": "^1.48.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/lodash": "^4.17.10",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@types/scss-parser": "^1.0.4",
    "@types/tinycolor2": "^1.4.6",
    "@vitejs/plugin-react": "^4.3.2",
    "bootstrap": "^5.3.3",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "jsdom": "^25.0.1",
    "lodash": "^4.17.21",
    "sass": "^1.79.5",
    "scss-parser": "^1.0.6",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.3",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix"
  }
}
